- title 'Log In'
- heading 'Log In'
- css_class 'sessions'

= form_tag login_path, method: :post, class: 'form-horizontal', id: 'login-form' do
  .container
    .row
      .col-md-4.col-md-offset-4
        .form-group.form-group-lg
          .input-group
            %span.input-group-addon
              %i.fa.fa-lg.fa-user-circle-o
            = text_field_tag :username, nil, maxlength: 32, class: 'form-control', placeholder: 'Username', value: @username
        .form-group.form-group-lg
          .input-group
            %span.input-group-addon
              %i.fa.fa-lg.fa-key
            = password_field_tag :password, nil, maxlength: 32, class: 'form-control', placeholder: 'Password'
        .form-group.form-group-lg.text-center
          = submit_tag 'Log In', class: 'btn btn-primary btn-lg', disabled: true, id: 'login', data: {disable_with: 'Logging Inâ€¦'}

